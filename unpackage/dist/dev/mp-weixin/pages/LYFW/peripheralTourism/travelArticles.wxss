.swi {
  width: 100%;
  height: 440rpx;
}
.swi .swi-item {
    width: 100%;
    height: 100%;
    overflow: hidden;
}
.swi image {
    width: 100%;
    height: 100%;
}
.view {
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
